.chat-main
  .group-info
    .group-info__left-box
      .group-info__left-box__group-name
        =@group.name
      .group-info__left-box__member
        .group-info__left-box__member-info
          Member:
        .group-info__left-box__member-name
          - @group.users.each do |user|
            =user.name
    .group-info__right-box
      = link_to edit_group_path(@group.id) , class: "group-info__right-box__edit" do
        ="Edit"

  .message-list
    = render @messages
      
    
 
  .message-form
    .new-message
      .new-message__input-box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .text-box
            = f.label :image, class: 'form__mask__image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'
      
          